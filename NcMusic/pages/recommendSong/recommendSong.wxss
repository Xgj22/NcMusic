/* pages/recommendSong/recommendSong.wxss */
.recommendSongContainer{
    position: relative;
}

.header{
    position: relative;
    width: 100%;
}

.header image{
    width: 100%;
    height: 300rpx;
}

.header text{
    position: absolute;
    line-height: 60rpx;
    font-size: 40rpx;
    top: 50%;
    left: 50%;
    transform:  translate(-25%,-25%);
}

.musicList{
    position: absolute;
    top: 280rpx;
    width: 100%;
    background-color: #fff;
    border-radius: 10rpx;
}

.musicList{
    padding: 0 10rpx;
}

.musicListHeader #more{
    margin-right: 20rpx;
    float: right;
}

.musicItem{
    display: flex;
    width: 100%;
    margin-top: 20rpx;
}

.musicItemBody{
    display: flex;
    flex-direction: column;
    margin-left: 20rpx;
    flex: 1;
    height: 80rpx;
    width: 1000rpx;
}

.musicItemBody text{
    height: 40rpx;
    line-height: 40rpx;
    font-size: 24rpx;
    max-width: 500rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.musicItemBody .musicName{
    width: 1000rpx;
}

.musicItemBody .author{
    width: 1000rpx;
}

.musicItem image{
    height: 80rpx;
    width: 80rpx;
    border-radius: 10rpx;
}

.musicItem text{
    height: 80rpx;
    width: 80rpx;
}

