/* pages/search/search.wxss */

.header{
    position: relative;
    display: flex;
    font-size: 28rpx;
    margin: 20rpx 20rpx;
    line-height: 70rpx;
    height: 70rpx;
}

.header input{
    background: rgba(237, 237, 237, 0.3);
    line-height: 70rpx;
    height:100%;
    flex: 1;
    border-radius: 10rpx;
    padding-left: 40rpx;
}

.header .iconfont{
    position: absolute;
}

.header .cancel{
    margin-right: 20rpx;
}

.hotSearchList{
    padding: 10rpx 30rpx;
}

.line{
    height: 2rpx;
    width: 90%;
    background-color: rgb(29, 38, 38,0.3);
    margin: 20rpx auto;
    text-align: center;
}

.hotSearchList{
    font-size: 28rpx;
}

.hotList{
    display: flex;
    flex-wrap: wrap;
}

.hotItem{
    width: 50%;
    margin: 20rpx auto;
}

.hotItem image{
    height: 30rpx;
    width: 30rpx;
    margin-left: 20rpx;
}

.order{
    margin-right: 10rpx;
}

/* 搜索内容展示 */
.searchContent {
    color: #d43c33;
    height: 80rpx;
    line-height: 80rpx;
    font-size: 24rpx;
    border-bottom: 1rpx solid #d43c33;
  
}
  
  .searchItem {
    height: 80rpx;
    line-height: 80rpx;
    display: flex;
}
  
  
  .searchItem .content {
    flex: 1;
    margin-left: 20rpx;
    border-bottom: 1rpx solid #eee;
    font-size: 26rpx;
}

/* 搜索历史 */
.history {
    position: relative;
    display: flex;
    flex-wrap: wrap;
    line-height:  50rpx;
    margin: 20rpx 0;
}
  
  
  .history .title {
    font-size: 28rpx;
    height: 50rpx;
  
}
  
  .history .historyItem {
    height: 50rpx;
    font-size: 26rpx;
    background: #ededed;
    margin-left: 20rpx;
    padding: 0 30rpx;
    border-radius: 20rpx;
    margin-bottom: 20rpx;
}
  
  .history .delete {
    position: absolute;
    bottom: 10rpx;
    right: 15rpx;
    font-size: 36rpx;
}