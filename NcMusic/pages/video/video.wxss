/* pages/video/video.wxss */
.videoContainer{

}

.header{
    height: 60rpx;
    display: flex;
    align-content: space-between;
    margin: 10rpx 20rpx;
}

.header image{
    height: 60rpx;
    width: 60rpx;
}

.headerText{
    line-height: 60rpx;
    text-align: center;
    flex-grow: 1;
    font-size: 30rpx;
}

.navScroll{
    display: flex;
    flex-direction: row;
    flex-wrap: nowrap;
    height: 60rpx;
}

.navItem{
    height: 50rpx;
    margin: 5rpx 10rpx;
    white-space: nowrap;
}

.navItem text{
    font-size: 28rpx;
}

.active{
    border-bottom: 1rpx solid #d43c33;
}

.videoScroll{
    height: calc(100vh - 130rpx);
}

.videoItem video{
    width: 100%;
    height: 380rpx;
}

.videoItem image{
    width: 100%;
    height: 380rpx;
}

.videoItem .content {
    font-size: 26rpx;
    height:80rpx;
    line-height: 80rpx;
    max-width: 500rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

/* footer */
.footer {
    border-top: 1rpx solid #eee;
    padding: 20rpx 0;
  }
  .footer .avatar {
    width: 60rpx;
    height: 60rpx;
    border-radius: 50%;
    vertical-align: middle;
  }
  
  .footer  .nickName {
    font-size: 26rpx;
    vertical-align: middle;
    margin-left: 20rpx;
  }
  
  .footer .comments_praised {
    float: right;
  }
  
  .comments_praised .btn {
    display: inline;
    padding: 0;
    background-color: transparent;
    border-color: transparent;
  }
  
  .comments_praised .btn:after {
    border: none;
  }
  
  .comments_praised .item {
    margin-left: 50rpx;
    position: relative;
  }
  
  .comments_praised .item .count {
    position: absolute;
    top: -20rpx;
    font-size: 20rpx;
  }