/* pages/index/index.wxss */
.indexContainer{
    height: 100%;
    width: 100%;
}

.banner{
    width: 100%;
    height: 300rpx;
}

.banner image{
    width: 100%;
    height: 100%;
}

.navContainer{
    display: flex;
    flex-direction: row;
    text-align: center;

}

.navItem{
    width: 20%;
    display: flex;
    flex-direction: column;
}

.navItem .iconfont{
    height: 100rpx;
    width: 100rpx;
    line-height: 100rpx;
    font-size: 44rpx;
    border-radius: 50%;
    background-color: rgb(240, 19, 19);
    margin: 20rpx auto;
}

.navItem text{
    font-size: 24rpx;
}


.recommendScroll{
    margin-top: 25rpx;
    /* display: flex; */
    /* white-space: nowrap; */
}

.vv{
    display: flex;
    margin-left: 20rpx;
}

.scroll-item{
    margin-right: 20rpx;
    width: 200rpx;
}

.scroll-item image{
    height: 200rpx;
    width: 200rpx;
    border-radius: 15rpx;
}

.vv .scroll-item text{
    /* display: inline-block; */
    font-size: 26rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
}

.topListSwiper{
    padding-left: 20rpx;
    height: 500rpx;
    width: 100%;
    margin-top: 20rpx;

}

.swiperItem{
    background-color: #fbfbfb;
    margin-right: 40rpx;
}

.musicItem{
    display: flex;
    /* flex-direction: column; */
    margin: 15rpx;
}

.title{
    font-size: 30rpx;
    line-height: 80rpx;
}

.musicItem image{
    height: 100rpx;
    width: 100rpx;
    border-radius: 10px;
    
}

.count{
    /* display: inline-block; */
    text-align: center;
    font-size: 28rpx;
    height: 100rpx;
    line-height: 100rpx;
    margin: auto 50rpx;
}

.musicName{
    /* display: inline-block; */
    font-size: 28rpx;
    text-align: center;
    height: 100rpx;
    line-height: 100rpx;
    max-width: 400rpx;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}
